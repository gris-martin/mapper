<Window x:Class="Mapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mapper"
        mc:Ignorable="d"
        Title="Mapper" Height="450" Width="800"
        FocusManager.FocusedElement="{Binding RelativeSource={x:Static RelativeSource.Self}, Mode=OneTime}">
    <Window.CommandBindings>
        <CommandBinding Command="local:CustomCommands.AddMarker" CanExecute="AddMarkerCommand_CanExecute" Executed="AddMarkerCommand_Executed"/>
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Load..."/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="Save _as..."/>
                <Separator/>
                <MenuItem Header="_Measure"/>
                <Separator/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
        </Menu>
        <Grid>
            <ItemsControl
                ItemsSource="{Binding Path=MapSymbols}"
                Name="pnlMainGrid" Background="LightBlue"
                MouseMove="pnlMainGrid_MouseMove"
                MouseLeave="pnlMainGrid_MouseLeave"
                MouseRightButtonDown="pnlMainGrid_MouseRightButtonDown"
                ContextMenuOpening="pnlMainGrid_ContextMenuOpening"
                ClipToBounds="True">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding Path=Image}" Width="25" Height="25"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding Path=Pos.X}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Path=Pos.Y}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="local:CustomCommands.AddMarker"></MenuItem>
                    </ContextMenu>
                </ItemsControl.ContextMenu>
            </ItemsControl>
            <Popup Name="mousePositionTip" Placement="Relative" AllowsTransparency="True">
                <TextBlock Name="mousePosition" FontWeight="Bold">Look at me</TextBlock>
            </Popup>
        </Grid>
    </DockPanel>
</Window>
