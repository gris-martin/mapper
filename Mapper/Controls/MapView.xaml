<UserControl x:Class="Mapper.Controls.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mapper.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.CommandBindings>
        <CommandBinding Command="local:CustomCommands.AddMarker"
                        CanExecute="AddMarkerCommand_CanExecute"
                        Executed="AddMarkerCommand_Executed"/>
    </UserControl.CommandBindings>
    <Grid Name="MapGrid"
          Background="LightBlue"
          MouseMove="MapGrid_MouseMove"
          MouseEnter="MapGrid_MouseEnter"
          MouseLeave="MapGrid_MouseLeave"
          MouseDown="MapGrid_MouseDown"
          MouseLeftButtonDown="MapGrid_MouseLeftButtonDown"
          MouseWheel="MapGrid_MouseWheel"
          MouseLeftButtonUp="MapGrid_MouseLeftButtonUp"
          ContextMenuOpening="MapGrid_ContextMenuOpening">
        <ItemsControl
                Grid.Column="2"
                ItemsSource="{Binding Path=MapSymbols}"
                ClipToBounds="True">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding Path=Image}"
                           Width="25"
                           Height="25"
                           MouseEnter="Image_MouseEnter"
                           MouseLeave="Image_MouseLeave"
                           MouseLeftButtonDown="Image_MouseDown"
                           MouseLeftButtonUp="Image_MouseUp"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Canvas.Left" Value="{Binding Path=ScreenPos.X}"/>
                    <Setter Property="Canvas.Top" Value="{Binding Path=ScreenPos.Y}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>
        <Path Stroke="Black" Name="ArcPath" Visibility="Hidden">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="300, 200">
                        <ArcSegment Size="40, 40" Point="350, 150" IsLargeArc="False"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Line Name="Ruler"
              Visibility="Hidden"
              X1="0"
              Y1="0"
              X2="100"
              Y2="100"
              StrokeThickness="4"
              Stroke="Black"/>
        <Popup Name="worldPositionTip" Placement="Relative" AllowsTransparency="True">
            <TextBlock Name="worldPosition" FontWeight="Bold">Look at me</TextBlock>
        </Popup>
        <Popup Name="markerTip" Placement="Relative" AllowsTransparency="True">
            <TextBlock Name="markerName" FontWeight="Bold">Look at me</TextBlock>
        </Popup>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Command="local:CustomCommands.AddMarker"
                          CommandTarget="{Binding Path=PlacementTarget, RelativeSource={RelativeSource AncestorType={x:TypeExtension ContextMenu}}}"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
