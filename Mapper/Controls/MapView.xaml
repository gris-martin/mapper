<UserControl x:Class="Mapper.Controls.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Mapper.Controls"
             xmlns:viewmodels="clr-namespace:Mapper.ViewModels"
             xmlns:uc="clr-namespace:Mapper.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodels:MapViewModel/>
    </UserControl.DataContext>
    <Grid Name="MapGrid"
          Background="LightBlue"
          MouseMove="MapGrid_MouseMove"
          MouseEnter="MapGrid_MouseEnter"
          MouseLeave="MapGrid_MouseLeave"
          MouseDown="MapGrid_MouseDown"
          MouseLeftButtonDown="MapGrid_MouseLeftButtonDown"
          MouseWheel="MapGrid_MouseWheel"
          MouseLeftButtonUp="MapGrid_MouseLeftButtonUp"
          ContextMenuOpening="MapGrid_ContextMenuOpening">
        <StackPanel>
            <TextBlock Text="{Binding ElementName=worldPositionTip, Path=HorizontalOffset, StringFormat='Tip horizontal offset: {0}'}"/>
            <TextBlock Text="{Binding ElementName=worldPositionTip, Path=VerticalOffset, StringFormat='Tip vertical offset: {0}'}"/>
            <TextBlock Text="{Binding Ruler.Model.ArcRadius, StringFormat='Arc radius: {0}'}"></TextBlock>
            <TextBlock Text="{Binding Ruler.Model.ArcRadius, StringFormat='Arc radius: {0}'}"></TextBlock>
        </StackPanel>
        <ItemsControl
                Grid.Column="2"
                ItemsSource="{Binding Path=Markers}"
                ClipToBounds="True">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding Source}"
                           Width="{StaticResource MarkerSize}"
                           Height="{StaticResource MarkerSize}"
                           MouseEnter="Image_MouseEnter"
                           MouseLeave="Image_MouseLeave"
                           MouseLeftButtonDown="Image_MouseDown"
                           MouseLeftButtonUp="Image_MouseUp"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Canvas.Left" Value="{Binding Path=CornerPosition.X}"/>
                    <Setter Property="Canvas.Top" Value="{Binding Path=CornerPosition.Y}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>
        <uc:RulerView/>
        <Popup Name="worldPositionTip" Placement="Relative" AllowsTransparency="True">
            <TextBlock Name="worldPosition" FontWeight="Bold">Look at me</TextBlock>
        </Popup>
        <Popup Name="markerTip" Placement="Relative" AllowsTransparency="True">
            <TextBlock Name="markerName" FontWeight="Bold">Look at me</TextBlock>
        </Popup>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Click="AddMarkerMenuItem_Click"
                          Header="Add Marker..."/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
