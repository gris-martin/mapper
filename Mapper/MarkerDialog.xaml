<Window x:Class="Mapper.MarkerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mapper"
        mc:Ignorable="d"
        Title="MarkerDialog" Height="200" Width="245">
    <UniformGrid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="icMarkerGrid" ItemsSource="{DynamicResource MarkerSymbols}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource ImageButtonStyle}" Click="Button_Click">
                            <Image Source="{Binding}" Width="25" Height="25" Margin="5"/>
                            <!--<Image Source="{Binding}" Width="25" Height="25" Margin="5"/>-->
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </UniformGrid>
</Window>
